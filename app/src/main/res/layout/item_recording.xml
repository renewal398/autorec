<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#16213E"
    android:padding="14dp"
    android:layout_marginBottom="2dp">

    <!-- Row: play button + name/date/size + delete button -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:gravity="center_vertical">

        <ImageButton android:id="@+id/btnPlay"
            android:layout_width="44dp" android:layout_height="44dp"
            android:src="@android:drawable/ic_media_play"
            android:background="#0F3460"
            android:padding="10dp"
            android:layout_marginEnd="12dp"/>

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical">

            <TextView android:id="@+id/tvRecName"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="14sp" android:textColor="#FFFFFF" android:textStyle="bold"
                android:maxLines="1" android:ellipsize="end"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_marginTop="3dp">
                <TextView android:id="@+id/tvRecDate"
                    android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                    android:textSize="11sp" android:textColor="#888888"/>
                <TextView android:id="@+id/tvRecSize"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="11sp" android:textColor="#555555"/>
            </LinearLayout>

        </LinearLayout>

        <ImageButton android:id="@+id/btnDelete"
            android:layout_width="38dp" android:layout_height="38dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="@android:color/transparent"
            android:tint="#CC4444"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Active indicator bar (shown while this item is selected/playing) -->
    <ProgressBar
        android:id="@+id/pbPlayback"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="50"
        android:progressTint="#E94560"
        android:indeterminate="true"
        android:visibility="gone"/>

</LinearLayout>

